<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form"
          xmlns:u="sap.ui.unified" xmlns:core="sap.ui.core" controllerName='Repository.browse.Browse'>
    <Panel width="auto" class="sapUiResponsiveMargin">
        <content>
            <VBox alignItems="Center" justifyContent="SpaceBetween">
                <Text text="Artifact Browser" class="sapMH4FontSize"/>
                <Text text="Here you can browse your repository" class="sapUiTinyMarginTop"/>
            </VBox>
        </content>
    </Panel>
    <VBox alignItems="Center" justifyContent="SpaceBetween">
        <Panel width="auto" class="sapUiResponsiveMargin sapUiNoContentPadding">
            <content>
                <Breadcrumbs currentLocationText="level2" class="sapUiSmallMargin">
                    <Link press="onPress" text="Root"/>
                    <Link press="onPress" text="level1"/>
                </Breadcrumbs>
            </content>
        </Panel>
        <List showNoData="true" noDataText="No Data" includeItemInSelection="true"
              items="{
			          path: '/',
			          sorter: {
				          path: 'test'
			          }
		          }">
            <StandardListItem
                    title="{test}"
                    description="{test2}"
                    icon="{ProductPicUrl}"
                    iconDensityAware="false"
                    iconInset="false"
                    press="handlePress"
                    detailPress="handleDetailPress" />
        </List>
    </VBox>
</mvc:View>