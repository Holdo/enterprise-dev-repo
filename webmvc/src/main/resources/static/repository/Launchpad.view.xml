<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName='Repository.Launchpad'>
    <Page title="Enterprise Development Repository">
        <content>
            <TileContainer
                    id="container"
                    tiles="{/data/TileCollection}">
                <StandardTile
                        press="handleTilePress"
                        icon="{icon}"
                        type="{type}"
                        number="{number}"
                        numberUnit="{numberUnit}"
                        title="{title}"
                        info="{info}"
                        infoState="{infoState}"/>
            </TileContainer>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Text text="Gasior, HoliÄ, Hutta --- PB138 2016"/>
                <ToolbarSpacer width="2em"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>